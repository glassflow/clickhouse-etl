# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8081
NEXT_PUBLIC_IN_DOCKER=false
NEXT_PUBLIC_PREVIEW_MODE=false
NEXT_PUBLIC_USE_MOCK_API=false
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_DEMO_MODE=false
NEXT_PUBLIC_DASHBOARD=
NEXT_PUBLIC_FILTERS_ENABLED=false
NEXT_PUBLIC_TRANSFORMATIONS_ENABLED=true
NEXT_PUBLIC_NOTIFICATIONS_ENABLED=false

# OpenTelemetry Configuration
# Enable/disable OpenTelemetry logs and metrics
NEXT_PUBLIC_OTEL_LOGS_ENABLED=true
NEXT_PUBLIC_OTEL_METRICS_ENABLED=true

# OpenTelemetry Service Configuration
NEXT_PUBLIC_OTEL_SERVICE_NAME=glassflow-ui
NEXT_PUBLIC_OTEL_SERVICE_VERSION=dev
NEXT_PUBLIC_OTEL_SERVICE_NAMESPACE=
NEXT_PUBLIC_OTEL_SERVICE_INSTANCE_ID=

# OpenTelemetry Exporter Configuration
# The OTLP HTTP endpoint (should point to OpenTelemetry Collector)
NEXT_PUBLIC_OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Optional: OTLP Headers as JSON string (for authentication, etc.)
# NEXT_PUBLIC_OTEL_EXPORTER_OTLP_HEADERS={"Authorization":"Bearer token"}

# Log Level (debug, info, warn, error)
NEXT_PUBLIC_LOG_LEVEL=info

# Kafka Performance Configuration
# Log level for KafkaJS client (NOTHING, ERROR, WARN, INFO, DEBUG). Default: ERROR
# KAFKA_LOG_LEVEL=ERROR

# Connection timeout in milliseconds. Default: 10000 (10s)
# KAFKA_CONNECT_TIMEOUT_MS=10000

# Session timeout in milliseconds for consumer groups. Default: 45000 (45s)
# Increase for slow networks or Kubernetes environments
# KAFKA_SESSION_TIMEOUT_MS=45000

# Sample fetch timeout (optional, milliseconds). Override to reproduce timeout locally (e.g. 2000 for 2s).
# KAFKA_FETCH_SAMPLE_TIMEOUT_MS=15000

# Auth0 Configuration (Optional)
# Set NEXT_PUBLIC_AUTH0_ENABLED=true to enable authentication
NEXT_PUBLIC_AUTH0_ENABLED=false
NEXT_PUBLIC_PROFILE_ROUTE=/api/auth/me

# Auth0 Settings (Required when NEXT_PUBLIC_AUTH0_ENABLED=true)
# Get these values from your Auth0 dashboard: https://manage.auth0.com/
AUTH0_SECRET=use-openssl-rand-hex-32-to-generate
APP_BASE_URL=http://localhost:8080
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
# AUTH0_AUDIENCE=your-api-audience (Optional - for API access)

# Instructions:
# 1. Copy this file to .env.local
# 2. If you want to enable Auth0:
#    - Set NEXT_PUBLIC_AUTH0_ENABLED=true
#    - Create an Auth0 application at https://manage.auth0.com/
#    - Configure the following URLs in your Auth0 application settings:
#      * Allowed Callback URLs: http://localhost:8080/api/auth/callback
#      * Allowed Logout URLs: http://localhost:8080
#      * Allowed Web Origins: http://localhost:8080
#    - Generate a secret: openssl rand -hex 32
#    - Fill in the Auth0 credentials above
# 3. If you don't need authentication, just leave NEXT_PUBLIC_AUTH0_ENABLED=false

