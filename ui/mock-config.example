# Mock API Configuration Example
# Copy this to .env.local and modify as needed

# Set to 'true' to enable mock mode for frontend development
NEXT_PUBLIC_USE_MOCK_API=false
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_FILTERS_ENABLED=true
NEXT_PUBLIC_NOTIFICATIONS_ENABLED=false

# Real API Configuration (used when mock mode is disabled)
NEXT_PUBLIC_API_URL=http://app:8081

# Development Configuration
NODE_ENV=development

# Mock Data Configuration
# You can add more specific mock configurations here
MOCK_KAFKA_TOPICS_COUNT=5
MOCK_CLICKHOUSE_DATABASES_COUNT=3
MOCK_PIPELINE_DELAY_MS=200